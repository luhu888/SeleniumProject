<?xml version="1.0" encoding="utf-8"?>            <!--XML 声明文件的可选部分，如果存在需要放在文档的第一行-->
<catalog>
    <maxid>4</maxid>
    <login username="pytest" passwd="123456">
        <caption>Python</caption>
        <item id="4">
            <caption>test</caption>
        </item>
    </login>
    <item id="2">         <!--XML 属性值必须加引号-->
        <caption>Zope</caption>
    </item>
</catalog>
<!--XML 标签对大小写敏感-->
